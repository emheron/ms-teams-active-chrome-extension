{
  "manifest_version": 3,
  "name": "Wiggle Teams",
  "version": "1.2",
  "description": "Wiggle Teams ensures your Microsoft Teams status stays active in the browser by simulating random user activity at 10 second intervals.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.teams.microsoft.com/*",
        "https://teams.microsoft.com/*",
        "http://teams.microsoft.com/*",
        "https://teams.microsoft.com.mcas.ms/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "https://teams.microsoft.com/*",
    "http://teams.microsoft.com/*",
    "https://teams.microsoft.com.mcas.ms/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wiggle Teams!",
    "default_icon": {
      "128": "available.png"
    }
  }
}
